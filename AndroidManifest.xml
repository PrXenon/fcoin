<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.f.coin"
    android:versionCode="027"
    android:versionName="1.8.6" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.f.coin.MainActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.f.coin.Einstellungen"
            android:label="@string/title_activity_einstellungen"
            android:theme="@style/Theme.fcoin" >
        </activity>
        <activity
            android:name="com.f.coin.Update"
            android:label="@string/title_activity_update" >
        </activity>
        <activity
            android:name="com.f.coin.Marktplatz"
            android:label="@string/title_activity_marktplatz" >
        </activity>
        <activity
            android:name="com.f.coin.Start"
            android:label="@string/title_activity_start" >
        </activity>
        <activity
            android:name="com.f.coin.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash_screen"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.f.coin.Offline"
            android:label="@string/title_activity_offline" >
        </activity>
    </application>

</manifest>